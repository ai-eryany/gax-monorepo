{
    "compilerOptions": {
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["node"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
